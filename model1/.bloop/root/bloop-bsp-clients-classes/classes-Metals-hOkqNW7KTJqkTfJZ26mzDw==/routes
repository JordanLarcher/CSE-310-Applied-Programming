# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Auth routes
GET     /login                      controllers.AuthController.showLogin()
POST    /login                      controllers.AuthController.login()
GET     /register                   controllers.AuthController.showRegister()
POST    /register                   controllers.AuthController.register()
GET     /logout                     controllers.AuthController.logout()

# --- Task Routes (TaskController) ---
GET     /tasks                      controllers.TaskController.listTasks
GET     /tasks/new                  controllers.TaskController.showCreateTask
POST    /tasks/new                  controllers.TaskController.createTask
GET     /tasks/:id/edit             controllers.TaskController.showEditTask(id: java.util.UUID)
POST    /tasks/:id/edit             controllers.TaskController.editTask(id: java.util.UUID)
POST    /tasks/:id/delete           controllers.TaskController.deleteTask(id: java.util.UUID)
POST    /tasks/:id/complete         controllers.TaskController.completeTask(id: java.util.UUID)


# Home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# ----- Reports ------ (Report controller)
GET     /report                   controllers.ReportController.index




# Profile Page 
GET     /profile                    controllers.ProfileController.showProfile
POST  /profile                    controllers.ProfileController.updateProfile
@page "/forgot-password"
@using TaskScheduler.Application.DTOs.Auth
@inject AuthenticationService AuthService

<PageTitle>Forgot Password - Task Scheduler</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Reset Password</h2>
            <p>Enter your email to receive reset instructions</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }

        @if (emailSent)
        {
            <div class="alert alert-success" role="alert">
                <h5 class="alert-heading">Email Sent!</h5>
                <p>If an account exists with this email, you will receive password reset instructions shortly.</p>
            </div>
        }
        else
        {
            <EditForm Model="@forgotPasswordModel" OnValidSubmit="@HandleForgotPassword">
                <DataAnnotationsValidator />

                <div class="form-group mb-3">
                    <label for="email">Email Address</label>
                    <InputText id="email" class="form-control" @bind-Value="forgotPasswordModel.Email" placeholder="your.email@example.com" />
                    <ValidationMessage For="@(() => forgotPasswordModel.Email)" />
                </div>

                <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Sending...</span>
                    }
                    else
                    {
                        <span>Send Reset Link</span>
                    }
                </button>
            </EditForm>

            <div class="auth-footer">
                <hr />
                <div class="text-center">
                    <p class="mb-0"><a href="/login" class="text-decoration-none">Back to login</a></p>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private ForgotPasswordDto forgotPasswordModel = new();
    private string? errorMessage;
    private bool isLoading;
    private bool emailSent;

    private async Task HandleForgotPassword()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            await AuthService.ForgotPasswordAsync(forgotPasswordModel.Email);
            emailSent = true;
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred. Please try again.";
            Console.WriteLine($"Forgot password error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    public class ForgotPasswordDto
    {
        public string Email { get; set; } = string.Empty;
    }
}

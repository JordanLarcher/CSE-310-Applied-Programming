@page "/profile"
@attribute [Authorize]
@inject UserApiService UserService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>My Profile - Task Scheduler</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">My Profile</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (profile != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="profile-stat-card">
                                    <div class="stat-icon bg-primary">
                                        <i class="bi bi-list-task"></i>
                                    </div>
                                    <div class="stat-content">
                                        <h4>@profile.TotalTasks</h4>
                                        <p>Total Tasks</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="profile-stat-card">
                                    <div class="stat-icon bg-success">
                                        <i class="bi bi-check-circle"></i>
                                    </div>
                                    <div class="stat-content">
                                        <h4>@profile.CompletedTasks</h4>
                                        <p>Completed</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="profile-stat-card">
                                    <div class="stat-icon bg-warning">
                                        <i class="bi bi-hourglass-split"></i>
                                    </div>
                                    <div class="stat-content">
                                        <h4>@profile.PendingTasks</h4>
                                        <p>Pending</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="profile-stat-card">
                                    <div class="stat-icon bg-info">
                                        <i class="bi bi-percent"></i>
                                    </div>
                                    <div class="stat-content">
                                        <h4>@GetCompletionRate()%</h4>
                                        <p>Completion Rate</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <EditForm Model="@editModel" OnValidSubmit="@UpdateProfile">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <InputText id="firstName" class="form-control" @bind-Value="editModel.FirstName" />
                                    <ValidationMessage For="@(() => editModel.FirstName)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <InputText id="lastName" class="form-control" @bind-Value="editModel.LastName" />
                                    <ValidationMessage For="@(() => editModel.LastName)" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <InputText id="email" class="form-control" @bind-Value="editModel.Email" disabled />
                                <small class="text-muted">Email cannot be changed</small>
                            </div>

                            <div class="mb-3">
                                <p class="mb-1"><strong>Account Created:</strong> @profile.CreatedAt?.ToString("MMMM dd, yyyy")</p>
                                <p class="mb-1"><strong>Last Login:</strong> @profile.LastLoginAt?.ToString("MMMM dd, yyyy HH:mm")</p>
                                <p class="mb-1"><strong>Email Verified:</strong> 
                                    @if (profile.IsEmailVerified)
                                    {
                                        <span class="badge bg-success">Verified</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Not Verified</span>
                                    }
                                </p>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <span>Save Changes</span>
                                    }
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="LoadProfile">Reset</button>
                            </div>
                        </EditForm>

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success mt-3" role="alert">
                                @successMessage
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private UserProfileDto? profile;
    private UserDto editModel = new();
    private bool isLoading = true;
    private bool isSaving;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        try
        {
            isLoading = true;
            profile = await UserService.GetProfileAsync();

            if (profile != null)
            {
                editModel = new UserDto
                {
                    Id = profile.Id,
                    Email = profile.Email,
                    FirstName = profile.FirstName,
                    LastName = profile.LastName
                };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task UpdateProfile()
    {
        try
        {
            isSaving = true;
            successMessage = null;

            await UserService.UpdateProfileAsync(editModel);
            await LoadProfile();

            successMessage = "Profile updated successfully!";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error updating profile: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private int GetCompletionRate()
    {
        if (profile == null || profile.TotalTasks == 0) return 0;
        return (int)((double)profile.CompletedTasks / profile.TotalTasks * 100);
    }
}

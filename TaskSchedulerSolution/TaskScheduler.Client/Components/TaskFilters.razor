<div class="task-filters card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label for="statusFilter" class="form-label">Status</label>
                <select id="statusFilter" class="form-select" @onchange="OnStatusChanged">
                    <option value="">All Statuses</option>
                    <option value="@Domain.Enums.TaskStatus.Pending">Pending</option>
                    <option value="@Domain.Enums.TaskStatus.InProgress">In Progress</option>
                    <option value="@Domain.Enums.TaskStatus.Completed">Completed</option>
                </select>
            </div>

            <div class="col-md-3">
                <label for="priorityFilter" class="form-label">Priority</label>
                <select id="priorityFilter" class="form-select" @onchange="OnPriorityChanged">
                    <option value="">All Priorities</option>
                    <option value="@TaskPriority.High">High</option>
                    <option value="@TaskPriority.Medium">Medium</option>
                    <option value="@TaskPriority.Low">Low</option>
                </select>
            </div>

            <div class="col-md-3">
                <label for="categoryFilter" class="form-label">Category</label>
                <select id="categoryFilter" class="form-select" @onchange="OnCategoryChanged">
                    <option value="">All Categories</option>
                    @foreach (var category in Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label for="searchFilter" class="form-label">Search</label>
                <input id="searchFilter" type="text" class="form-control" placeholder="Search tasks..."
                    @oninput="OnSearchChanged" />
            </div>
        </div>

        <div class="mt-3">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary @(ShowOverdue ? "active" : "")"
                    @onclick="ToggleOverdue">
                    <i class="bi bi-exclamation-triangle"></i> Overdue
                </button>
                <button type="button" class="btn btn-outline-secondary" @onclick="ClearFilters">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<Client.Models.CategoryDto> Categories { get; set; } = new();

    [Parameter]
    public EventCallback<string?> OnStatusFilterChanged { get; set; }

    [Parameter]
    public EventCallback<string?> OnPriorityFilterChanged { get; set; }

    [Parameter]
    public EventCallback<int?> OnCategoryFilterChanged { get; set; }

    [Parameter]
    public EventCallback<string?> OnSearchFilterChanged { get; set; }

    [Parameter]
    public EventCallback<bool> OnOverdueFilterChanged { get; set; }

    [Parameter]
    public bool ShowOverdue { get; set; }

    private async Task OnStatusChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        await OnStatusFilterChanged.InvokeAsync(string.IsNullOrEmpty(value) ? null : value);
    }

    private async Task OnPriorityChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        await OnPriorityFilterChanged.InvokeAsync(string.IsNullOrEmpty(value) ? null : value);
    }

    private async Task OnCategoryChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        int? categoryId = string.IsNullOrEmpty(value) ? null : int.Parse(value);
        await OnCategoryFilterChanged.InvokeAsync(categoryId);
    }

    private async Task OnSearchChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        await OnSearchFilterChanged.InvokeAsync(string.IsNullOrEmpty(value) ? null : value);
    }

    private async Task ToggleOverdue()
    {
        await OnOverdueFilterChanged.InvokeAsync(!ShowOverdue);
    }

    private async Task ClearFilters()
    {
        await OnStatusFilterChanged.InvokeAsync(null);
        await OnPriorityFilterChanged.InvokeAsync(null);
        await OnCategoryFilterChanged.InvokeAsync(null);
        await OnSearchFilterChanged.InvokeAsync(null);
        await OnOverdueFilterChanged.InvokeAsync(false);
    }
}
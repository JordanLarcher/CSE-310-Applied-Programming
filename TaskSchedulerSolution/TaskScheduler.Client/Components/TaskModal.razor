@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(IsEditMode ? "Edit Task" : "Create New Task")</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@taskModel" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                            <InputText id="title" class="form-control" @bind-Value="taskModel.Title"
                                placeholder="Enter task title" />
                            <ValidationMessage For="@(() => taskModel.Title)" />
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <InputTextArea id="description" class="form-control" @bind-Value="taskModel.Description"
                                rows="4" placeholder="Enter task description" />
                            <ValidationMessage For="@(() => taskModel.Description)" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="dueDate" class="form-label">Due Date</label>
                                <InputDate id="dueDate" class="form-control" @bind-Value="taskModel.DueDate" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="priority" class="form-label">Priority <span class="text-danger">*</span></label>
                                <InputSelect id="priority" class="form-select" @bind-Value="taskModel.Priority">
                                    <option value="">Select Priority</option>
                                    <option value="@TaskPriority.Low">Low</option>
                                    <option value="@TaskPriority.Medium">Medium</option>
                                    <option value="@TaskPriority.High">High</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => taskModel.Priority)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>
                            <InputSelect id="category" class="form-select" @bind-Value="taskModel.CategoryId">
                                <option value="">No Category</option>
                                @foreach (var category in Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <span>@(IsEditMode ? "Update" : "Create")</span>
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public bool IsEditMode { get; set; }

    [Parameter]
    public TaskDto? TaskToEdit { get; set; }

    [Parameter]
    public List<CategoryDto> Categories { get; set; } = new();

    [Parameter]
    public EventCallback<CreateTaskDto> OnCreate { get; set; }

    [Parameter]
    public EventCallback<(int Id, UpdateTaskDto Task)> OnUpdate { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private CreateTaskDto taskModel = new() { Title = "", Priority = TaskPriority.Medium };
    private bool isSubmitting;

    protected override void OnParametersSet()
    {
        if (IsVisible && IsEditMode && TaskToEdit != null)
        {
            taskModel = new CreateTaskDto
            {
                Title = TaskToEdit.Title,
                Description = TaskToEdit.Description,
                DueDate = TaskToEdit.DueDate,
                Priority = TaskToEdit.Priority,
                CategoryId = TaskToEdit.CategoryId
            };
        }
        else if (IsVisible && !IsEditMode)
        {
            taskModel = new CreateTaskDto { Title = "", Priority = TaskPriority.Medium };
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;

            if (IsEditMode && TaskToEdit != null)
            {
                var updateDto = new UpdateTaskDto
                {
                    Title = taskModel.Title,
                    Description = taskModel.Description,
                    DueDate = taskModel.DueDate,
                    Priority = taskModel.Priority,
                    CategoryId = taskModel.CategoryId
                };
                await OnUpdate.InvokeAsync((TaskToEdit.Id, updateDto));
            }
            else
            {
                await OnCreate.InvokeAsync(taskModel);
            }

            await Close();
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task Close()
    {
        IsVisible = false;
        taskModel = new CreateTaskDto { Title = "", Priority = TaskPriority.Medium };
        await OnClose.InvokeAsync();
    }
}